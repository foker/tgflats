# Database Configuration
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tbi_prop"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="development"
PORT=3000
JWT_SECRET="your-secret-jwt-key-change-in-production"

# External API Keys
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
TELEGRAM_BOT_TOKEN="your-telegram-bot-token"
OPENAI_API_KEY="your-openai-api-key"

# Telegram Configuration (optional for advanced usage)
TELEGRAM_API_ID="your-telegram-api-id"
TELEGRAM_API_HASH="your-telegram-api-hash"
TELEGRAM_SESSION="your-session-string"

# AI Configuration
AI_PROVIDER="openai" # openai or anthropic
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Geocoding Configuration
GEOCODING_PROVIDER="google" # google or mapbox
MAPBOX_API_KEY="your-mapbox-api-key"

# Application Settings
MAX_LISTINGS_PER_CHANNEL=1000
PARSE_INTERVAL_MINUTES=15
AI_CONFIDENCE_THRESHOLD=0.8
GEOCODING_CACHE_TTL_DAYS=30

# Security Settings
CORS_ORIGIN="http://localhost:5173"
RATE_LIMIT_TTL=900
RATE_LIMIT_LIMIT=100

# Monitoring & Logging
LOG_LEVEL="info"
ENABLE_SWAGGER=true
ENABLE_METRICS=true